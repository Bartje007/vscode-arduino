#include <WiFi.h>
#include <HTTPClient.h>
#include <ArduinoJson.h>

const char* ssid = "****"; 
const char* password = "****";

// API endpoint for Brussels weather
const char* serverName = "http://api.openweathermap.org/data/2.5/weather?q=Brussels,BE&appid=YOUR KEY"; 
unsigned long lastUpdateTime = 0;
 // Update every 10 minutes (in milliseconds)
const unsigned long updateInterval = 10 * 1 * 1000;

String payload;

WiFiServer server(80); // Set web server port number to 80


void setup() {
  Serial.begin(115200);
  pinMode(LED_BUILTIN, OUTPUT);
  digitalWrite(LED_BUILTIN, LOW);

  // Connect to Wi-Fi network with SSID and password
  Serial.print("Connecting to ");
  Serial.println(ssid);
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  // Print local IP address and start web server
  Serial.println("");
  Serial.println("WiFi connected.");
  Serial.println("IP address: ");
  Serial.println(WiFi.localIP());
  server.begin();
}
